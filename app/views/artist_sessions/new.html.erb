<%= render 'artists/css_cadastro' %>

<div class="hr"></div>

<center>
    <span><strong>
    <% if @artist_session.errors.has_key? :base %>
        <%= @artist_session.errors[:base].join(', ') %>
    <% end %>
    </strong></span>

    <div class="txtg" style="margin-top:20px; color:#484848;">Login</div>

    <%= form_for @artist_session do |f| %>
        <fieldset class="fieldLogin">
            <label>
                <%= f.text_field :username_or_email, id: "usernameLogin", placeholder: "Username or email" %>
            </label>

            <label>
                <%= f.password_field :password, id: "passwordLogin", placeholder: "Password" %>
            </label>

            <%= f.submit "Login"%>
            </fieldset>
    <% end %>

    <p class="forgetpass">
        <%= link_to "Did you forget your password or your username? Click here!", new_password_reset_path, id: "preto" %>
    </p>
</center>
