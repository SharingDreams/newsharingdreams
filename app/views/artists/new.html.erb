<%= render 'css_cadastro' %>

<div class="top">
    <div class="logo">
        <a href='/gallery'><img src="assets/img/logo.png" class="logo_img"></a>
    </div>
    <ul class="menu_list">
        <li><a href="/about" id="menu">About</a></li>
        <li>Join</li>
        <li><a href="/login" id="menu">Login</a></li>
    </ul>
</div>
<div class="hr"></div>
<div class='form' style="text-align:center;">
<center>
    <div class="que_bom">How nice your interest to join us!</div>

    <small class="forwhoRegister">Help kids around the world and be recognized! Sharing Dreams artists must have 13 years old or above and less than 18 years old.</small>

    <%= form_for @artist do |f| %>

        <label>
            <%= f.text_field :username, id: "usernameLogin", placeholder: "Create a username" %>
            <%= error_field @artist, :username %>
        </label>

        <label>
            <%= f.text_field :email, placeholder: "Type here your email", id: "usernameLogin" %>
            <%= error_field @artist, :email %>
        </label>

        <label>
            <%= f.text_field :country, placeholder: "City, Country", id: "usernameLogin" %>
            <%= error_field @artist, :country %>
        </label>

        <label>
            <%= f.text_field :birthday, class: "datepicker", id: "usernameLogin", placeholder: "Birthday: mm/dd/yyyy" %>
            <%= error_field @artist, :birthday %>
        </label>

        <label>
            <%= f.text_area :about, placeholder: "Tell us about you! (optional)" %>
        </label>

        <label>
            <%= f.password_field :password, id: "usernameLogin", placeholder: "Type here your password" %>
            <%= error_field @artist, :password %>
        </label>

        <label>
            <%= f.password_field :password_confirmation, id: "usernameLogin", placeholder: "Type here your password again!" %>
            <%= error_field @artist, :password_confirmation %>
        </label>

        <div style="height:20px;"></div>

        <%= f.submit "Cadastrar!", class: "btn2 like" %>
        <div style="height:100px;"></div>
    <% end %>
</center>

</div>

<script>
$(function() {
  $('.datepicker').datepicker({format: 'dd-mm-yyyy'});
});
</script>
