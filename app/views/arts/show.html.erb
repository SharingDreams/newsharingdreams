<style>
    .middle{
        background:url('<%=  @art.image.url(:large) %>') no-repeat center center fixed;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
        height:480px;
    }
    .full_art_all{
        display: inline-block;
        width: 465px;
        background: #e5e5e5 url('<%= @art.image.url(:large) %>') no-repeat center center;
        background-size:auto 300px;
        height:300px;
    }
    @media(max-width: 329px){
        .full_art_all{
            width: 300px;
            height:180px;
        }
    }
    @media(min-width: 330px) and (max-width:389px) {
        .full_art_all{
            width: 300px;
            height:200px;
        }
    }
    @media(min-width: 390px) and (max-width:500px) {
        .full_art_all{
            width: 340px;
            height:240px;
        }
    }
</style>

<div class="middle" id="art_page">
    <div class="hr"></div>
</div>
<div style="height:20px;"></div>

<div class="info_art">
    <% if @artist.photo.present? %>
        <%= link_to(image_tag(@artist.photo.url(:medium), size: "60x60", class: "author-image"), artist_path(@artist)) %>
    <% else %>
        <%= link_to(image_tag("sem-foto.png", size: "60x60", class: "author-image"), artist_path(@artist)) %>
    <% end %>

	<div class="art_name">
        <%= @art.title %>
    </div>

    <div class="author_name">
        by <%= link_to @art.artist.username, @art.artist %>
    </div>

    <div class="amount">
	    <div class="amount_dollaDeep Purple Perfect Strangersr">
	        $0
	    </div>
	    donated
	</div>
	<br>

	<center>
		<div class="art">

            <%= link_to(content_tag(:div, nil, class: "full_art_all"), @art.image.url, :data => { :lightbox => "image-1", :title => "" }) %>

	        <div class="about_donate">
                <div class="why">
                    About donate
                </div>
                <p style"text-indent: 10px;" style=" margin-top:5px;" class="about_donate_text">
                    It's not about dollars. It's a deposit of hope for a better world. All the money collected is distribuited weekly for many charity institutions and also for the artist.<br>
                    <a href="/">Read more here</a>
                </p>
                <a class="waves-effect waves-light btn modal-trigger" id="aboutbtn" href="#modal1">Donators list</a><br>
            </div>
            <br><br>
		</div>

        <div class="hr"></div>

        <div class="more_of">
            <% if @artist_arts.count == 0 %>
            <% else %>
                <br><br>More of <%= @art.artist.username %><br>
		          <% @artist_arts.each do |art| %>
                        <%= link_to(image_tag(art.image.url(:medium), class: "more_of_art"), art_path(art)) %>
                    <% end %>
            <% end %>
        </div>
        <div style="height:40px;"></div>
	</center>
</div>